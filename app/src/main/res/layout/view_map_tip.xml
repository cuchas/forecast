<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/ic_wb_sunny_black_24dp"
        android:id="@+id/image_icon_map_tip"
        android:layout_marginRight="@dimen/grid"
        android:layout_marginEnd="@dimen/grid"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/tweenty_seven"
        android:id="@+id/text_temp_map_tip"
        android:layout_gravity="center_vertical"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>